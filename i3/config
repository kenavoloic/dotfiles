bindsym $mod+Shift+Down exec $nsi pactl set-sink-volume 0 -2%
bindsym $mod+m exec $nsi pactl set-sink-mute 0 toggle
#mixer clavier portable
bindsym XF86AudioRaiseVolume exec $nsi pactl set-sink-volume 0 +2%
bindsym XF86AudioLowerVolume exec $nsi pactl set-sink-volume 0 -2%
bindsym XF86AudioMute exec $nsi pactl set-sink-mute 0 toggle
